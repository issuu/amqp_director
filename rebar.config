%% -*- erlang -*-
{deps, [
    {amqp_client, "3.7.4"},
    {gproc, "0.6.1"},
    {lager, "3.6.1"}
 ]}.

{erl_opts, [
    debug_info,
    warn_format,
    warn_export_all,
    warn_export_vars,
    warn_shadow_vars,
    warn_obsolete_guard,
    warn_unused_import,
    {parse_transform, lager_transform} ]}.

{xref_warnings,true}.

{xref_checks,[exports_not_used,undefined_function_calls]}.
